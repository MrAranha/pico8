pico-8 cartridge // http://www.pico-8.com
version 43
__lua__
x = 60
y = 60
timing = 0.5
char_sprite = 1
coin = 39
float = 0
bullet = 43
function _coin(x, y)

	spr(coin, 70, 60)
	coin += 0.075
	if coin >= 43 and coin <= 255 then
		coin = 39
	end
	float += 0.1
	if float >= 2 then
		float = 0
	end
	
	if(x >= 65 and x <= 75) and (y >= 55 and y <= 65) and coin <= 255 then
		coin = 255
		sfx(1)
	end
end


function _shoot()

	spr(bullet, 50, 60)
	bullet += 0.30
	if bullet >= 48 then
		bullet = 43
	end
	float += 0.1
	if float >= 2 then
		float = 0
	end
end


head_bobbing = 8
trident_bobbing = 4

function _enemy()

	y_enemy = 80
	x_enemy = 80
	--TRIDENT
	spr(29,x_enemy-4, y_enemy-trident_bobbing)
	--BODY
	spr(28,x_enemy, y_enemy)

	--HEAD
	spr(27,x_enemy, y_enemy-head_bobbing)

	head_bobbing -= 0.075
	if head_bobbing <= 6 then
		head_bobbing = 8
	end


	trident_bobbing -= 0.05
	if trident_bobbing <= 2 then
		trident_bobbing = 4
	end
end


function _draw()

	cls(3)
	_enemy()
	_coin(x, y)
	_shoot()
	spr(char_sprite, x, y)
	if(not btn(0) and not btn(2) and not btn(3) and not btn(1)) then
		if char_sprite <= 12 and char_sprite >= 10 then
			char_sprite = 10
		end
		if char_sprite >= 4 and char_sprite <= 6 then
			char_sprite = 4
		end
		if char_sprite <= 9 and char_sprite >= 7 then
			char_sprite = 7
		end
		if char_sprite <= 3 and char_sprite >= 1 then
			char_sprite = 1
		end
	end
	if(btn(0) and x != 0) then
		x -= 2
		if(not btn(3) and not btn(2)) then
			char_sprite = char_sprite + 0.25
			if char_sprite > 12 or char_sprite < 10 then
				char_sprite = 10
			end
		end
	end
	if(btn(1)  and x != 120) then
		x += 2
		if(not btn(3) and not btn(2)) then
			char_sprite = char_sprite + 0.25
			if char_sprite < 4 or char_sprite > 6 then
				char_sprite = 4
			end
		end
	end
	if(btn(2) and y != 0) then
		y -= 2
		char_sprite = char_sprite + 0.25
		if char_sprite > 9 or char_sprite < 7 then
			char_sprite = 7
		end
	end
	if(btn(3) and y != 120) then
		y += 2
		char_sprite = char_sprite + 0.25
		if char_sprite > 3 or char_sprite < 1 then
			char_sprite = 1
		end
	end
end
